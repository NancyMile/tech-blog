<div class="card">
  <div class="card-body m-t-5 p-4">
    <div class="row">
      <h3>Post</h3>
      <form class="form edit-post-form">
        <input type="hidden" name="post_id" id="post-id" value="{{id}}">
        <div class="form-group">
          <label for="post-title">Title:</label>
          <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}" />
        </div>
        <div class="form-group">
          <label for="post-content">Content:</label>
          <textarea class="form-input" id="post-content" name="post-content"> {{content}} </textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-lg btn-block">Edit</button>
        </div>
      </form>
      <div class="form-group">
        <form class="form delete-post-form">
          <button type="submit" class="btn btn-primary btn-lg btn-block" data-id="{{id}}">Delete {{id}}</button>
        </form>
      </div>
    </div>
 </div>
<script src="../js/editpost.js"></script>