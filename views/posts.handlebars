<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post:</h3>
    <form class="form edit-post-form">
      <input type="hidden" name="post_id" id="post-id" value="{{id}}">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <input type="text" class="form-input" id="post-content" name="post-content" value="{{content}}">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Edit</button>
      </div>
    </form>
  </div> 
<script src="../js/editpost.js"></script>


