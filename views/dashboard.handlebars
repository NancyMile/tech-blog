<div class="row">
  <div class="col-auto">
    <h2>Welcome!, {{name}}!</h2>
      {{!-- list posts --}}
    {{#if posts.length}}
    <div class="col-md-8 post-list">
      <h3>Posts:</h3>
      {{#each posts as |post|}}
      <div class="row">
        <div class="form-group m-t-5 p-4">
          <button class="btn btn-primary btn-lg btn-block"><a href="/post/{{post.id}}">{{post.title}}</a></button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
    <div class="form-group col-md-4 justify-content-center">
      <button class="btn btn-primary btn-lg btn-block"><a href="/createpost">+ Add Post</button>
    </div>
  </div>
</div>