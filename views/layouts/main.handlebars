    <div class="flex-column justify-space-around p-4 bg-dark">
      <nav class="nav">
        <a class="nav-link p-4 text-white" href="#">Home</a>
        <!-- Login or logout links -->
        {{#if logged_in}}
        <a class="nav-link p-4 text-white" href="/post">Dashboard</a>
        <a class="nav-link p-4 text-white" id="logout" href="/">Logout</a>
          {{!-- <button class="bg-dark" id="logout">Logout</button> --}}
        {{else}}
          <a  class="nav-link p-4 text-white" href="/login">Login</a>
        {{/if}}
      </nav>
    </div>
    <header>
      <div class="justify-content-center p-4 bg-dark">
        <h1 class="text-center"><a href="/"> <button class="p-4 ">The Tech Blog</button></a></h1>
      </div>  
    </header>
      <main class="container container-fluid mt-5">
        <!-- Render layout -->
        {{{ body }}}
      </main>
    <footer>
      <div class="text-center p-4 bg-dark">
        <span class="text-white">All rights reserved.</span>
      </div>
    </footer>
    </div>
    <!-- Script for logged in -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
  </body>
